<!DOCTYPE html>
<html>
  <head>
    <title>BaseProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <!-- ======= Top Bar ======= -->
    <div id="topbar" class="d-none d-lg-flex align-items-end fixed-top topbar-transparent">
      <div class="container d-flex justify-content-end">
        <div class="social-links">
          <%= render 'home/social_links' %>
        </div>
      </div>
    </div>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top header-transparent">
      <div class="container d-flex align-items-center">

        <h1 class="logo mr-auto">
          <%= link_to Setting.project_name, root_path %></h1>
        <!-- Uncomment below if you prefer to use an image logo -->
        <!-- <a href="index.html" class="logo mr-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

        <nav class="main-nav d-none d-lg-block">
          <ul>
            <li class="<%= 'active' if current_page?(root_url) %>"><%= link_to 'Главная', root_path %></li>
            <li><%= link_to 'О нас', root_path(anchor: 'about') %></li>
            <li class="<%= 'active' if @service %>"><%= link_to 'Услуги', root_path(anchor: 'services') %></li>
            <li class="<%= 'active' if @portfolio %>"><%= link_to 'Портфолио', root_path(anchor: 'portfolio') %></li>
            <li><%= link_to 'Команда', root_path(anchor: 'team') %></li>
            <li><%= link_to 'Контакты', root_path(anchor: 'footer') %></li>
          </ul>
        </nav><!-- .main-nav-->

      </div>
    </header><!-- End Header -->

    <%= yield %>

    <!-- ======= Footer ======= -->
    <footer id="footer" class="section-bg">
      <div class="footer-top">
        <div class="container">

          <div class="row">

            <div class="col-lg-6">

              <div class="row">

                <div class="col-sm-6">

                  <div class="footer-info">
                    <h3><%= Setting.project_name  %></h3>
                    <p><%= Setting.footer_description %></p>
                  </div>

                  <div class="footer-newsletter">
                    <%= render @subscription %>
                  </div>

                </div>

                <div class="col-sm-6">
<!--                  <div class="footer-links">-->
<!--                    <h4>Карта сайта</h4>-->
<!--                    <ul>-->
<!--                      <li><%#= link_to 'Главная', root_path  %></li>-->
<!--                      <li><a href="#">О нас</a></li>-->
<!--                      <li><a href="#services">Услуги</a></li>-->
<!--                      <li><a href="#portfolio">Портфолио</a></li>-->
<!--                      <li><a href="#team">Команда</a></li>-->
<!--                    </ul>-->
<!--                  </div>-->

                  <div class="footer-links">
                    <h4>Контакты</h4>
                    <p>
                      <%= Setting.address  %>
                      <br>
                      <strong>Телефон:</strong> <%= phone_to(Setting.phone) %><br>
                      <strong>Email:</strong> <%= mail_to(Setting.email) %><br>
                    </p>
                  </div>

                  <div class="social-links">
                    <%= render 'home/social_links' %>
                  </div>

                </div>

              </div>

            </div>

            <div class="col-lg-6">

              <div class="form" id="new_customer_request_block">
                <%= render 'customer_requests/customer_request' %>
              </div>

            </div>

          </div>

        </div>
      </div>

      <div class="container">
        <div class="copyright">
          &copy; Copyright <strong><%= Setting.project_name  %></strong>. All Rights Reserved
        </div>
        <div class="credits">
        </div>
      </div>
    </footer><!-- End  Footer -->

    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
  </body>
</html>
